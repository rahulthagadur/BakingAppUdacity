<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/widget_line">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBakingWidgetUpper"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/widget_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBakingWidgetBottom"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/txt_left"
            android:paddingRight="@dimen/txt_left">

            <ImageView
                android:id="@+id/widget_img_launcher"
                android:layout_width="@dimen/txt_iv"
                android:layout_height="@dimen/txt_iv"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingEnd="@dimen/widget_padding"
                android:paddingLeft="@dimen/widget_padding"
                android:paddingRight="@dimen/widget_padding"
                android:paddingStart="@dimen/widget_padding"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@+id/widget_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

</FrameLayout>